Global WindowMain

Global PanelHandle, ListMovies, ListSeries

Declare ResizeGadgetsWindowMain()


Procedure OpenWindowMain(x = 0, y = 0, width = 600, height = 400)
  WindowMain = OpenWindow(#PB_Any, x, y, width, height, "Watched", #PB_Window_SystemMenu | #PB_Window_MinimizeGadget | #PB_Window_MaximizeGadget | #PB_Window_SizeGadget | #PB_Window_ScreenCentered)
  PanelHandle = PanelGadget(#PB_Any, 10, 10, 580, 380)
  AddGadgetItem(PanelHandle, -1, "Movies")
  ListMovies = ListIconGadget(#PB_Any, 10, 10, 560, 340, "Title", 538, #PB_ListIcon_GridLines | #PB_ListIcon_FullRowSelect)
  AddGadgetItem(PanelHandle, -1, "Series")
  ListSeries = ListIconGadget(#PB_Any, 10, 10, 560, 340, "Title", 338, #PB_ListIcon_GridLines | #PB_ListIcon_FullRowSelect)
  AddGadgetColumn(ListSeries, 1, "Season", 100)
  AddGadgetColumn(ListSeries, 2, "Episode", 100)
  CloseGadgetList()
EndProcedure

Procedure ResizeGadgetsWindowMain()
  Protected FormWindowWidth, FormWindowHeight
  FormWindowWidth = WindowWidth(WindowMain)
  FormWindowHeight = WindowHeight(WindowMain)
  ResizeGadget(PanelHandle, 10, 10, FormWindowWidth - 20, FormWindowHeight - 20)
  ResizeGadget(ListMovies, 10, 10, GetGadgetAttribute(PanelHandle,#PB_Panel_ItemWidth) - 20, GetGadgetAttribute(PanelHandle,#PB_Panel_ItemHeight) - 18)
  ResizeGadget(ListSeries, 10, 10, GetGadgetAttribute(PanelHandle,#PB_Panel_ItemWidth) - 20, GetGadgetAttribute(PanelHandle,#PB_Panel_ItemHeight) - 18)
EndProcedure

Procedure WindowMain_Events(event)
  Select event
    Case #PB_Event_SizeWindow
      ResizeGadgetsWindowMain()
    Case #PB_Event_CloseWindow
      ProcedureReturn #False

    Case #PB_Event_Menu
      Select EventMenu()
      EndSelect

    Case #PB_Event_Gadget
      Select EventGadget()
      EndSelect
  EndSelect
  ProcedureReturn #True
EndProcedure

